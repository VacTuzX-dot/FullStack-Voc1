---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Blog - อินEar">
  <div class="blog-page">
    <!-- Hero Section -->
    <section class="hero-section">
      <div class="hero-bg">
        <img src="/images/bg.png" alt="Background" class="bg-image" />
        <div class="hero-overlay"></div>
      </div>
      <div class="container">
        <div class="hero-content">
          <span class="badge-label">บล็อก</span>
          <h1 class="hero-title">
            บทความและ<br/>
            <span class="highlight">เรื่องราวจากเรา</span>
          </h1>
          <p class="hero-subtitle">
            อัปเดตข่าวสาร รีวิว และเคล็ดลับจากโลกของหูฟัง IEM
          </p>
        </div>
      </div>
    </section>

    <!-- Blog Content -->
    <section class="blog-section">
      <div class="container">
        <div class="coming-soon-card">
          <div class="coming-soon-icon">
            <i class="bi bi-journal-richtext"></i>
          </div>
          <h2>เร็วๆ นี้!</h2>
          <p>เรากำลังเตรียมเนื้อหาดีๆ ให้คุณ กลับมาดูใหม่เร็วๆ นี้สำหรับรีวิว การเปรียบเทียบ และเคล็ดลับเกี่ยวกับเสียง!</p>
          <a href="/" class="back-btn">
            <i class="bi bi-arrow-left me-2"></i>กลับหน้าหลัก
          </a>
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  .blog-page {
    background: linear-gradient(180deg, #0a0a0a 0%, #1a1a1a 50%, #0a0a0a 100%);
    min-height: 100vh;
    color: white;
  }

  /* Hero Section */
  .hero-section {
    position: relative;
    padding: 120px 0 80px;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 0;
  }

  .bg-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.3;
    filter: blur(4px);
  }

  .hero-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(180deg, rgba(10, 10, 10, 0.8) 0%, rgba(26, 26, 26, 0.9) 100%);
  }

  .hero-content {
    position: relative;
    z-index: 1;
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .badge-label {
    display: inline-block;
    background: linear-gradient(135deg, #7c3aed 0%, #5b21b6 100%);
    padding: 8px 20px;
    border-radius: 50px;
    font-size: 0.875rem;
    font-weight: 500;
    margin-bottom: 24px;
    letter-spacing: 0.5px;
  }

  .hero-title {
    font-size: 3rem;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 24px;
  }

  .highlight {
    background: linear-gradient(135deg, #7c3aed 0%, #a78bfa 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: 1.125rem;
    color: rgba(255, 255, 255, 0.7);
    max-width: 600px;
    margin: 0 auto;
    line-height: 1.7;
  }

  /* Blog Section */
  .blog-section {
    padding: 60px 0 80px;
  }

  .coming-soon-card {
    max-width: 600px;
    margin: 0 auto;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 24px;
    padding: 60px 40px;
    text-align: center;
  }

  .coming-soon-icon {
    width: 80px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #7c3aed 0%, #5b21b6 100%);
    border-radius: 20px;
    margin: 0 auto 24px;
    font-size: 2rem;
  }

  .coming-soon-card h2 {
    font-size: 1.75rem;
    font-weight: 600;
    margin-bottom: 16px;
  }

  .coming-soon-card p {
    color: rgba(255, 255, 255, 0.6);
    line-height: 1.7;
    margin-bottom: 32px;
  }

  .back-btn {
    display: inline-flex;
    align-items: center;
    padding: 14px 28px;
    background: linear-gradient(135deg, #7c3aed 0%, #5b21b6 100%);
    color: white;
    text-decoration: none;
    border-radius: 12px;
    font-weight: 600;
    transition: all 0.3s ease;
  }

  .back-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 30px rgba(124, 58, 237, 0.3);
    color: white;
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: 2rem;
    }

    .coming-soon-card {
      padding: 40px 24px;
    }
  }
</style>
