---
import Layout from '../layouts/Layout.astro';
import LoginForm from '../components/LoginForm.jsx';
---

<Layout title="Sign In - 013 Frontend">
  <div class="signin-page">
    <!-- Background -->
    <div class="signin-bg">
      <img src="/images/bg.png" alt="Background" />
      <div class="bg-overlay"></div>
    </div>
    
    <LoginForm client:load />
  </div>
</Layout>

<style>
  .signin-page {
    position: relative;
    min-height: calc(100vh - 76px);
  }
  
  .signin-bg {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: -1;
    overflow: hidden;
  }
  
  .signin-bg img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.6;
  }
  
  .bg-overlay {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(180deg, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0.5) 100%);
  }
</style>
