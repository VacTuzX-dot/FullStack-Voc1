</style>

<script>
  import Swal from 'sweetalert2';
  import { navigate } from 'astro:transitions/client';
  import { API_ENDPOINTS } from '../../config/api.js';
  
  // Global token variable
  let token = null;
  
  // Decode JWT token to check user status
  function decodeToken(token) {
    try {
      const base64Url = token.split('.')[1];
      const base64 = base64Url.replace(/-/g, '+').replace(/_/g, '/');
      const jsonPayload = decodeURIComponent(atob(base64).split('').map(function(c) {
        return '%' + ('00' + c.charCodeAt(0).toString(16)).slice(-2);
      }).join(''));
      return JSON.parse(jsonPayload);
    } catch (e) {
      return null;
    }
  }
  
  // Initialize page
  document.addEventListener('DOMContentLoaded', () => {
    // Check auth
    token = localStorage.getItem('token');
    if (!token) {
      navigate('/signin');
      return;
    }
    
    // Check if user is admin
    const userData = decodeToken(token);
    if (!userData || userData.status !== 'admin') {
      Swal.fire({
        title: 'Access Denied',
        text: 'You do not have permission to access this page. Admin access required.',
        icon: 'error',
        confirmButtonText: 'Go to Home',
        allowOutsideClick: false,
        allowEscapeKey: false
      }).then(() => {
        navigate('/');
      });
      return; // Stop execution
    }
    
    // If admin, load users
    loadUsers();
  });
  
  
  async function loadUsers() {
    const loadingState = document.getElementById('loadingState');
    const usersTable = document.getElementById('usersTable');
    const errorState = document.getElementById('errorState');
    const tbody = document.getElementById('usersTableBody');
    
    try {
      const res = await fetch(API_ENDPOINTS.users, {
        headers: { 'Authorization': `Bearer ${token}` }
      });
      
      if (!res.ok) throw new Error('Failed to fetch');
      
      const response = await res.json();
      const users = response.data || [];
      
      if (tbody) {
        tbody.innerHTML = users.map((user: any) => `
          <tr>
            <td>${user.id}</td>
            <td><span class="fw-bold">${user.username}</span></td>
            <td>${user.firstname || '-'}</td>
            <td>${user.fullname}</td>
            <td>${user.lastname}</td>
            <td>${user.sex || '-'}</td>
            <td>${user.birthday ? new Date(user.birthday).toLocaleDateString('th-TH') : '-'}</td>
            <td class="text-truncate" style="max-width: 150px;" title="${user.address || ''}">${user.address || '-'}</td>
            <td>${user.created_at ? new Date(user.created_at).toLocaleDateString('th-TH') : '-'}</td>
            <td>
              <span class="badge ${user.status === 'admin' ? 'text-bg-purple' : 'text-bg-primary'}">
                ${user.status === 'admin' ? 'üëë Admin' : 'üë§ User'}
              </span>
            </td>
            <td>
              <button class="btn btn-sm btn-outline-primary me-1" onclick="editUser(${user.id})" title="Edit">
                <i class="bi bi-pencil"></i>
              </button>
              <button class="btn btn-sm btn-outline-danger" onclick="deleteUser(${user.id})" title="Delete">
                <i class="bi bi-trash"></i>
              </button>
            </td>
          </tr>
        `).join('');
      }
      
      loadingState?.classList.add('d-none');
      usersTable?.classList.remove('d-none');
      
    } catch (error) {
      loadingState?.classList.add('d-none');
      errorState?.classList.remove('d-none');
    }
  }
  
