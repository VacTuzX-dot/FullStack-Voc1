---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Admin - Users">
  <div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>
        <i class="bi bi-people me-2"></i>
        User Management
      </h1>
      <button class="btn btn-primary" id="addUserBtn">
        <i class="bi bi-person-plus me-2"></i>
        Add User
      </button>
    </div>
    
    <div class="card shadow-sm">
      <div class="card-body">
        <div id="loadingState" class="text-center py-5">
          <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
          </div>
          <p class="mt-2">Loading users...</p>
        </div>
        
        <div id="usersTable" class="d-none">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Name</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody id="usersTableBody">
            </tbody>
          </table>
        </div>
        
        <div id="errorState" class="d-none text-center py-5 text-danger">
          <i class="bi bi-exclamation-triangle fs-1"></i>
          <p class="mt-2">Failed to load users. Please try again.</p>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  import Swal from 'sweetalert2';
  
  // Check auth
  const token = localStorage.getItem('token');
  if (!token) {
    window.location.href = '/signin';
  }
  
  async function loadUsers() {
    const loadingState = document.getElementById('loadingState');
    const usersTable = document.getElementById('usersTable');
    const errorState = document.getElementById('errorState');
    const tbody = document.getElementById('usersTableBody');
    
    try {
      const res = await fetch('https://backend-nextjs-virid.vercel.app/api/users', {
        headers: { 'Authorization': `Bearer ${token}` }
      });
      
      if (!res.ok) throw new Error('Failed to fetch');
      
      const response = await res.json();
      const users = response.data || [];
      
      if (tbody) {
        tbody.innerHTML = users.map((user: any) => `
          <tr>
            <td>${user.id}</td>
            <td>${user.username}</td>
            <td>${user.fullname} ${user.lastname}</td>
            <td>
              <button class="btn btn-sm btn-outline-primary me-1" onclick="editUser(${user.id})">
                <i class="bi bi-pencil"></i>
              </button>
              <button class="btn btn-sm btn-outline-danger" onclick="deleteUser(${user.id})">
                <i class="bi bi-trash"></i>
              </button>
            </td>
          </tr>
        `).join('');
      }
      
      loadingState?.classList.add('d-none');
      usersTable?.classList.remove('d-none');
      
    } catch (error) {
      loadingState?.classList.add('d-none');
      errorState?.classList.remove('d-none');
    }
  }
  
  loadUsers();
  
  // Add to window for onclick handlers
  (window as any).editUser = (id: number) => {
    Swal.fire({
      title: 'Edit User',
      text: `Edit user ID: ${id}`,
      icon: 'info'
    });
  };
  
  (window as any).deleteUser = async (id: number) => {
    const result = await Swal.fire({
      title: 'Delete User?',
      text: 'This action cannot be undone.',
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#d33',
      confirmButtonText: 'Yes, delete it!'
    });
    
    if (result.isConfirmed) {
      try {
        await fetch(`https://backend-nextjs-virid.vercel.app/api/users/${id}`, {
          method: 'DELETE',
          headers: { 'Authorization': `Bearer ${token}` }
        });
        Swal.fire('Deleted!', 'User has been deleted.', 'success');
        loadUsers();
      } catch {
        Swal.fire('Error!', 'Failed to delete user.', 'error');
      }
    }
  };
</script>
