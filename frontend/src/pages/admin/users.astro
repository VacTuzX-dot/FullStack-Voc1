---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Admin - Users">
  <div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>
        <i class="bi bi-people me-2"></i>
        User Management
      </h1>
      <button class="btn btn-primary" id="addUserBtn">
        <i class="bi bi-person-plus me-2"></i>
        Add User
      </button>
    </div>
    
    <div class="card shadow-sm">
      <div class="card-body">
        <div id="loadingState" class="text-center py-5">
          <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
          </div>
          <p class="mt-2">Loading users...</p>
        </div>
        
        <div id="usersTable" class="d-none">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Name</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody id="usersTableBody">
            </tbody>
          </table>
        </div>
        
        <div id="errorState" class="d-none text-center py-5 text-danger">
          <i class="bi bi-exclamation-triangle fs-1"></i>
          <p class="mt-2">Failed to load users. Please try again.</p>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  import Swal from 'sweetalert2';
  import { API_ENDPOINTS } from '../../config/api.js';
  
  // Check auth
  const token = localStorage.getItem('token');
  if (!token) {
    window.location.href = '/signin';
  }
  
  async function loadUsers() {
    const loadingState = document.getElementById('loadingState');
    const usersTable = document.getElementById('usersTable');
    const errorState = document.getElementById('errorState');
    const tbody = document.getElementById('usersTableBody');
    
    try {
      const res = await fetch(API_ENDPOINTS.users, {
        headers: { 'Authorization': `Bearer ${token}` }
      });
      
      if (!res.ok) throw new Error('Failed to fetch');
      
      const response = await res.json();
      const users = response.data || [];
      
      if (tbody) {
        tbody.innerHTML = users.map((user: any) => `
          <tr>
            <td>${user.id}</td>
            <td>${user.username}</td>
            <td>${user.fullname} ${user.lastname}</td>
            <td>
              <button class="btn btn-sm btn-outline-primary me-1" onclick="editUser(${user.id})">
                <i class="bi bi-pencil"></i>
              </button>
              <button class="btn btn-sm btn-outline-danger" onclick="deleteUser(${user.id})">
                <i class="bi bi-trash"></i>
              </button>
            </td>
          </tr>
        `).join('');
      }
      
      loadingState?.classList.add('d-none');
      usersTable?.classList.remove('d-none');
      
    } catch (error) {
      loadingState?.classList.add('d-none');
      errorState?.classList.remove('d-none');
    }
  }
  
  loadUsers();
  
  // Edit User function with modal
  (window as any).editUser = async (id: number) => {
    try {
      // Fetch current user data
      const res = await fetch(API_ENDPOINTS.userById(id), {
        headers: { 'Authorization': `Bearer ${token}` }
      });
      
      if (!res.ok) throw new Error('Failed to fetch user');
      
      const response = await res.json();
      const user = response.data;
      
      // Show edit form with SweetAlert2
      const { value: formValues } = await Swal.fire({
        title: '<i class="bi bi-pencil-square me-2"></i>Edit User',
        customClass: {
          popup: 'swal-wide', // Optional: if we want to make it wider but shorter
        },
        html: `
          <div class="text-start">
            <div class="row g-2 mb-2">
              <div class="col-12">
                <label class="form-label fw-bold small text-muted">Username</label>
                <input id="swal-username" class="form-control" value="${user.username}" placeholder="Username">
              </div>
            </div>
            
            <div class="row g-2 mb-2">
              <div class="col-6">
                <label class="form-label fw-bold small text-muted">ชื่อ (Fullname)</label>
                <input id="swal-fullname" class="form-control" value="${user.fullname || ''}" placeholder="Fullname">
              </div>
              <div class="col-6">
                <label class="form-label fw-bold small text-muted">นามสกุล (Lastname)</label>
                <input id="swal-lastname" class="form-control" value="${user.lastname || ''}" placeholder="Lastname">
              </div>
            </div>

            <div class="mb-2">
              <label class="form-label fw-bold small text-muted">Status</label>
              <select id="swal-status" class="form-select">
                <option value="active" ${user.status === 'active' ? 'selected' : ''}>Active</option>
                <option value="inactive" ${user.status === 'inactive' ? 'selected' : ''}>Inactive</option>
              </select>
            </div>

            <div class="mb-2">
              <label class="form-label fw-bold small text-muted">รหัสผ่านใหม่ <span class="fw-normal">(เว้นว่างถ้าไม่เปลี่ยน)</span></label>
              <input id="swal-password" type="password" class="form-control" placeholder="New Password">
            </div>
          </div>
        `,
        width: '500px', // Set a reasonable fixed width
        focusConfirm: false,
        showCancelButton: true,
        confirmButtonText: 'Save',
        cancelButtonText: 'Cancel',
        confirmButtonColor: '#7c3aed',
        preConfirm: () => {
          return {
            username: (document.getElementById('swal-username') as HTMLInputElement).value,
            fullname: (document.getElementById('swal-fullname') as HTMLInputElement).value,
            lastname: (document.getElementById('swal-lastname') as HTMLInputElement).value,
            status: (document.getElementById('swal-status') as HTMLSelectElement).value,
            password: (document.getElementById('swal-password') as HTMLInputElement).value,
          };
        }
      });

      if (formValues) {
        // Prepare update data (exclude empty password)
        const updateData: any = {
          username: formValues.username,
          fullname: formValues.fullname,
          lastname: formValues.lastname,
          status: formValues.status,
        };
        
        if (formValues.password) {
          updateData.password = formValues.password;
        }

        // Send update request
        const updateRes = await fetch(API_ENDPOINTS.userById(id), {
          method: 'PUT',
          headers: {
            'Authorization': `Bearer ${token}`,
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(updateData)
        });

        if (updateRes.ok) {
          Swal.fire({
            title: 'Updated!',
            text: 'User has been updated successfully.',
            icon: 'success',
            timer: 1500,
            showConfirmButton: false
          });
          loadUsers();
        } else {
          const error = await updateRes.json();
          Swal.fire('Error!', error.message || 'Failed to update user.', 'error');
        }
      }
    } catch (error) {
      Swal.fire('Error!', 'Failed to load user data.', 'error');
    }
  };
  
  (window as any).deleteUser = async (id: number) => {
    const result = await Swal.fire({
      title: 'Delete User?',
      text: 'This action cannot be undone.',
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#d33',
      confirmButtonText: 'Yes, delete it!'
    });
    
    if (result.isConfirmed) {
      try {
        await fetch(API_ENDPOINTS.userById(id), {
          method: 'DELETE',
          headers: { 'Authorization': `Bearer ${token}` }
        });
        Swal.fire('Deleted!', 'User has been deleted.', 'success');
        loadUsers();
      } catch {
        Swal.fire('Error!', 'Failed to delete user.', 'error');
      }
    }
  };
</script>
