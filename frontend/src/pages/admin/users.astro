---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Admin - Users">
  <div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h1>
        <i class="bi bi-people me-2"></i>
        User Management
      </h1>
      <button class="btn btn-primary" id="addUserBtn">
        <i class="bi bi-person-plus me-2"></i>
        Add User
      </button>
    </div>
    
    <div class="card shadow-sm">
      <div class="card-body">
        <div id="loadingState" class="text-center py-5">
          <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
          </div>
          <p class="mt-2">Loading users...</p>
        </div>
        
        <div id="usersTable" class="d-none table-responsive">
          <table class="table table-hover align-middle">
            <thead class="table-light">
              <tr>
                <th>ID</th>
                <th>Username</th>
                <th>Prefix</th>
                <th>Name</th>
                <th>Surname</th>
                <th>Sex</th>
                <th>Birthday</th>
                <th>Address</th>
                <th>Created At</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody id="usersTableBody">
            </tbody>
          </table>
        </div>
        
        <div id="errorState" class="d-none text-center py-5 text-danger">
          <i class="bi bi-exclamation-triangle fs-1"></i>
          <p class="mt-2">Failed to load users. Please try again.</p>
        </div>
      </div>
    </div>
  </div>
</Layout>

<script>
  import Swal from 'sweetalert2';
  import { navigate } from 'astro:transitions/client';
  import { API_ENDPOINTS } from '../../config/api.js';
  
  // Check auth
  const token = localStorage.getItem('token');
  if (!token) {
    navigate('/signin');
  }
  
  async function loadUsers() {
    const loadingState = document.getElementById('loadingState');
    const usersTable = document.getElementById('usersTable');
    const errorState = document.getElementById('errorState');
    const tbody = document.getElementById('usersTableBody');
    
    try {
      const res = await fetch(API_ENDPOINTS.users, {
        headers: { 'Authorization': `Bearer ${token}` }
      });
      
      if (!res.ok) throw new Error('Failed to fetch');
      
      const response = await res.json();
      const users = response.data || [];
      
      if (tbody) {
        tbody.innerHTML = users.map((user: any) => `
          <tr>
            <td>${user.id}</td>
            <td><span class="fw-bold">${user.username}</span></td>
            <td>${user.firstname || '-'}</td>
            <td>${user.fullname}</td>
            <td>${user.lastname}</td>
            <td>${user.sex || '-'}</td>
            <td>${user.birthday ? new Date(user.birthday).toLocaleDateString('th-TH') : '-'}</td>
            <td class="text-truncate" style="max-width: 150px;" title="${user.address || ''}">${user.address || '-'}</td>
            <td>${user.created_at ? new Date(user.created_at).toLocaleDateString('th-TH') : '-'}</td>
            <td>
              <span class="badge ${user.status === 'active' ? 'text-bg-success' : 'text-bg-secondary'}">
                ${user.status}
              </span>
            </td>
            <td>
              <button class="btn btn-sm btn-outline-primary me-1" onclick="editUser(${user.id})" title="Edit">
                <i class="bi bi-pencil"></i>
              </button>
              <button class="btn btn-sm btn-outline-danger" onclick="deleteUser(${user.id})" title="Delete">
                <i class="bi bi-trash"></i>
              </button>
            </td>
          </tr>
        `).join('');
      }
      
      loadingState?.classList.add('d-none');
      usersTable?.classList.remove('d-none');
      
    } catch (error) {
      loadingState?.classList.add('d-none');
      errorState?.classList.remove('d-none');
    }
  }
  
  loadUsers();
  
  // Edit User function with modal
  (window as any).editUser = async (id: number) => {
    try {
      // Fetch current user data
      const res = await fetch(API_ENDPOINTS.userById(id), {
        headers: { 'Authorization': `Bearer ${token}` }
      });
      
      if (!res.ok) throw new Error('Failed to fetch user');
      
      const response = await res.json();
      const user = response.data;
      
      // Format birthday for input type="date" (YYYY-MM-DD)
      const birthdayVal = user.birthday ? new Date(user.birthday).toISOString().split('T')[0] : '';
      
      // Show edit form with SweetAlert2
      const { value: formValues } = await Swal.fire({
        title: '<i class="bi bi-pencil-square me-2"></i>Edit User',
        customClass: {
          popup: 'swal-wide',
        },
        html: `
          <div class="text-start">
            <div class="row g-2 mb-2">
              <div class="col-6">
                <label class="form-label fw-bold small text-muted">Username</label>
                <input id="swal-username" class="form-control" value="${user.username}" placeholder="Username">
              </div>
               <div class="col-6">
                <label class="form-label fw-bold small text-muted">คำนำหน้า (Prefix)</label>
                <input id="swal-firstname" class="form-control" value="${user.firstname || ''}" placeholder="นาย/นาง/นางสาว">
              </div>
            </div>
            
            <div class="row g-2 mb-2">
              <div class="col-6">
                <label class="form-label fw-bold small text-muted">ชื่อ (Name)</label>
                <input id="swal-fullname" class="form-control" value="${user.fullname || ''}" placeholder="Fullname">
              </div>
              <div class="col-6">
                <label class="form-label fw-bold small text-muted">นามสกุล (Surname)</label>
                <input id="swal-lastname" class="form-control" value="${user.lastname || ''}" placeholder="Lastname">
              </div>
            </div>

            <div class="row g-2 mb-2">
              <div class="col-6">
                <label class="form-label fw-bold small text-muted">เพศ (Sex)</label>
                <select id="swal-sex" class="form-select">
                  <option value="" ${!user.sex ? 'selected' : ''}>- เลือก -</option>
                  <option value="ชาย" ${user.sex === 'ชาย' ? 'selected' : ''}>ชาย</option>
                  <option value="หญิง" ${user.sex === 'หญิง' ? 'selected' : ''}>หญิง</option>
                  <option value="อื่นๆ" ${user.sex === 'อื่นๆ' ? 'selected' : ''}>อื่นๆ</option>
                </select>
              </div>
              <div class="col-6">
                <label class="form-label fw-bold small text-muted">วันเกิด (Birthday)</label>
                <input id="swal-birthday" type="date" class="form-control" value="${birthdayVal}">
              </div>
            </div>

            <div class="mb-2">
              <label class="form-label fw-bold small text-muted">ที่อยู่ (Address)</label>
              <textarea id="swal-address" class="form-control" rows="2" placeholder="Address">${user.address || ''}</textarea>
            </div>

            <div class="row g-2 mb-2">
              <div class="col-6">
                <label class="form-label fw-bold small text-muted">Status</label>
                <select id="swal-status" class="form-select">
                  <option value="active" ${user.status === 'active' ? 'selected' : ''}>Active</option>
                  <option value="inactive" ${user.status === 'inactive' ? 'selected' : ''}>Inactive</option>
                </select>
              </div>
              <div class="col-6">
                 <label class="form-label fw-bold small text-muted">รหัสผ่านใหม่ <span class="fw-normal small">(เว้นว่างถ้าไม่เปลี่ยน)</span></label>
                 <input id="swal-password" type="password" class="form-control" placeholder="New Password">
              </div>
            </div>
          </div>
        `,
        width: '600px',
        focusConfirm: false,
        showCancelButton: true,
        confirmButtonText: 'Save',
        cancelButtonText: 'Cancel',
        confirmButtonColor: '#7c3aed',
        preConfirm: () => {
          return {
            username: (document.getElementById('swal-username') as HTMLInputElement).value,
            firstname: (document.getElementById('swal-firstname') as HTMLInputElement).value,
            fullname: (document.getElementById('swal-fullname') as HTMLInputElement).value,
            lastname: (document.getElementById('swal-lastname') as HTMLInputElement).value,
            sex: (document.getElementById('swal-sex') as HTMLSelectElement).value,
            birthday: (document.getElementById('swal-birthday') as HTMLInputElement).value,
            address: (document.getElementById('swal-address') as HTMLTextAreaElement).value,
            status: (document.getElementById('swal-status') as HTMLSelectElement).value,
            password: (document.getElementById('swal-password') as HTMLInputElement).value,
          };
        }
      });

      if (formValues) {
        // Prepare update data (exclude empty password)
        const updateData: any = {
          username: formValues.username,
          firstname: formValues.firstname,
          fullname: formValues.fullname,
          lastname: formValues.lastname,
          sex: formValues.sex,
          birthday: formValues.birthday,
          address: formValues.address,
          status: formValues.status,
        };
        
        if (formValues.password) {
          updateData.password = formValues.password;
        }

        // Send update request
        const updateRes = await fetch(API_ENDPOINTS.userById(id), {
          method: 'PUT',
          headers: {
            'Authorization': `Bearer ${token}`,
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(updateData)
        });

        if (updateRes.ok) {
          Swal.fire({
            title: 'Updated!',
            text: 'User has been updated successfully.',
            icon: 'success',
            timer: 1500,
            showConfirmButton: false
          });
          loadUsers();
        } else {
          const error = await updateRes.json();
          Swal.fire('Error!', error.message || 'Failed to update user.', 'error');
        }
      }
    } catch (error) {
      Swal.fire('Error!', 'Failed to load user data.', 'error');
    }
  };
  
  (window as any).deleteUser = async (id: number) => {
    const result = await Swal.fire({
      title: 'Delete User?',
      text: 'This action cannot be undone.',
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#d33',
      confirmButtonText: 'Yes, delete it!'
    });
    
    if (result.isConfirmed) {
      try {
        await fetch(API_ENDPOINTS.userById(id), {
          method: 'DELETE',
          headers: { 'Authorization': `Bearer ${token}` }
        });
        Swal.fire('Deleted!', 'User has been deleted.', 'success');
        loadUsers();
      } catch {
        Swal.fire('Error!', 'Failed to delete user.', 'error');
      }
    }
  };
  // Add User function
  const addUserBtn = document.getElementById('addUserBtn');
  addUserBtn?.addEventListener('click', () => createUser());

  async function createUser() {
    const { value: formValues } = await Swal.fire({
      title: '<i class="bi bi-person-plus me-2"></i>Add User',
      customClass: {
        popup: 'swal-wide',
      },
      html: `
        <div class="text-start">
          <div class="row g-2 mb-2">
            <div class="col-6">
              <label class="form-label fw-bold small text-muted">Username <span class="text-danger">*</span></label>
              <input id="swal-add-username" class="form-control" placeholder="Username">
            </div>
             <div class="col-6">
              <label class="form-label fw-bold small text-muted">คำนำหน้า (Prefix) <span class="text-danger">*</span></label>
              <input id="swal-add-firstname" class="form-control" placeholder="นาย/นาง/นางสาว">
            </div>
          </div>
          
          <div class="row g-2 mb-2">
            <div class="col-6">
              <label class="form-label fw-bold small text-muted">ชื่อ (Name) <span class="text-danger">*</span></label>
              <input id="swal-add-fullname" class="form-control" placeholder="Fullname">
            </div>
            <div class="col-6">
              <label class="form-label fw-bold small text-muted">นามสกุล (Surname) <span class="text-danger">*</span></label>
              <input id="swal-add-lastname" class="form-control" placeholder="Lastname">
            </div>
          </div>

          <div class="row g-2 mb-2">
            <div class="col-6">
              <label class="form-label fw-bold small text-muted">เพศ (Sex)</label>
              <select id="swal-add-sex" class="form-select">
                <option value="">- เลือก -</option>
                <option value="ชาย">ชาย</option>
                <option value="หญิง">หญิง</option>
                <option value="อื่นๆ">อื่นๆ</option>
              </select>
            </div>
            <div class="col-6">
              <label class="form-label fw-bold small text-muted">วันเกิด (Birthday)</label>
              <input id="swal-add-birthday" type="date" class="form-control">
            </div>
          </div>

          <div class="mb-2">
            <label class="form-label fw-bold small text-muted">ที่อยู่ (Address)</label>
            <textarea id="swal-add-address" class="form-control" rows="2" placeholder="Address"></textarea>
          </div>

          <div class="row g-2 mb-2">
            <div class="col-6">
              <label class="form-label fw-bold small text-muted">Status</label>
              <select id="swal-add-status" class="form-select">
                <option value="active" selected>Active</option>
                <option value="inactive">Inactive</option>
              </select>
            </div>
            <div class="col-6">
               <label class="form-label fw-bold small text-muted">รหัสผ่าน (Password) <span class="text-danger">*</span></label>
               <input id="swal-add-password" type="password" class="form-control" placeholder="Password">
            </div>
          </div>
        </div>
      `,
      width: '600px',
      focusConfirm: false,
      showCancelButton: true,
      confirmButtonText: 'Create',
      cancelButtonText: 'Cancel',
      confirmButtonColor: '#7c3aed',
      preConfirm: () => {
        const username = (document.getElementById('swal-add-username') as HTMLInputElement).value;
        const firstname = (document.getElementById('swal-add-firstname') as HTMLInputElement).value;
        const fullname = (document.getElementById('swal-add-fullname') as HTMLInputElement).value;
        const lastname = (document.getElementById('swal-add-lastname') as HTMLInputElement).value;
        const password = (document.getElementById('swal-add-password') as HTMLInputElement).value;

        if (!username || !firstname || !fullname || !lastname || !password) {
           Swal.showValidationMessage('กรุณากรอกข้อมูลที่จำเป็นให้ครบถ้วน');
           return false;
        }

        return {
          username,
          firstname,
          fullname,
          lastname,
          sex: (document.getElementById('swal-add-sex') as HTMLSelectElement).value,
          birthday: (document.getElementById('swal-add-birthday') as HTMLInputElement).value,
          address: (document.getElementById('swal-add-address') as HTMLTextAreaElement).value,
          status: (document.getElementById('swal-add-status') as HTMLSelectElement).value,
          password
        };
      }
    });

    if (formValues) {
      try {
        const res = await fetch(API_ENDPOINTS.users, {
          method: 'POST',
          headers: {
            'Authorization': `Bearer ${token}`,
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(formValues)
        });

        const data = await res.json();

        if (res.ok) {
          Swal.fire({
            title: 'Success!',
            text: 'User created successfully.',
            icon: 'success',
            timer: 1500,
            showConfirmButton: false
          });
          loadUsers();
        } else {
          Swal.fire('Error!', data.message || 'Failed to create user.', 'error');
        }
      } catch (error) {
        Swal.fire('Error!', 'Failed to connect to server.', 'error');
      }
    }
  }
</script>
