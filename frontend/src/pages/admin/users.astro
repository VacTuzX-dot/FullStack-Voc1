          return {
            username: (document.getElementById('swal-username') as HTMLInputElement).value,
            firstname: (document.getElementById('swal-firstname') as HTMLInputElement).value,
            fullname: (document.getElementById('swal-fullname') as HTMLInputElement).value,
            lastname: (document.getElementById('swal-lastname') as HTMLInputElement).value,
            sex: (document.getElementById('swal-sex') as HTMLSelectElement).value,
            birthday: (document.getElementById('swal-birthday') as HTMLInputElement).value,
            address: (document.getElementById('swal-address') as HTMLTextAreaElement).value,
            status: (document.getElementById('swal-status') as HTMLSelectElement).value,
            password: (document.getElementById('swal-password') as HTMLInputElement).value,
          };
        }
      });

      if (formValues) {
        // Prepare update data (exclude empty password)
        const updateData: any = {
          username: formValues.username,
          firstname: formValues.firstname,
          fullname: formValues.fullname,
          lastname: formValues.lastname,
          sex: formValues.sex,
          birthday: formValues.birthday,
          address: formValues.address,
          status: formValues.status,
        };
        
        if (formValues.password) {
          updateData.password = formValues.password;
        }

        // Send update request
        const updateRes = await fetch(API_ENDPOINTS.userById(id), {
